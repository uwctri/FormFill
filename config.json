{
    "name": "Form Fill",
    "description": "Fillout a PDF form and email, save, or fax it",
    "namespace": "UWMadison\\FormFill",
    "authors": [
        {
            "name": "Adam Nunez",
            "email": "Adam.Nunez@ctri.wisc.edu",
            "institution": "UW Madison - Center for Tobacco Research and Intervention"
        }
    ],
    "permissions": [
        "redcap_data_entry_form",
        "redcap_every_page_top"
    ],
    "compatibility": {
        "redcap-version-min": "13.1.2"
    },
    "framework-version": 11,
    "enable-ajax-logging": true,
    "auth-ajax-actions": [
        "log",
        "email"
    ],
    "project-settings": [
        {
            "key": "descriptive",
            "name": "When filling in checkboxes on a PDF eveny item should be individualy named, any truthy value will be used to select the checkbox. PDF specifc text formatting, like datetimes, may not work for all PDF versions. PDF Radios and dropdowns (option lists) are not currently supported.",
            "type": "descriptive"
        },
        {
            "key": "fax-fufiller",
            "name": "<b>E-faxing address:</b><br>e.g. 'concordsend.com'",
            "type": "textbox"
        },
        {
            "key": "date-format",
            "name": "<b>Date Format:</b><br>e.g. 'MM/dd/y'",
            "type": "textbox"
        },
        {
            "key": "filable-instance",
            "name": "<b>Form</b>",
            "type": "sub_settings",
            "repeatable": true,
            "sub_settings": [
                {
                    "key": "instrument",
                    "name": "<b>Active Instruments</b>",
                    "type": "form-list",
                    "repeatable": true
                },
                {
                    "key": "event",
                    "name": "<b>Default Data Pull Event:</b><br>Data is pulled from the local event, then the default, then the first until a non-blank is found",
                    "type": "event-list"
                },
                {
                    "key": "pdf",
                    "name": "<b>PDF Form</b>",
                    "type": "file"
                },
                {
                    "key": "button",
                    "name": "<b>Generate Button Selector:</b><br>CSS Selector",
                    "type": "textbox"
                },
                {
                    "key": "destination",
                    "name": "<b>Destination</b>",
                    "type": "radio",
                    "choices": [
                        {
                            "value": "download",
                            "name": "Download"
                        },
                        {
                            "value": "email",
                            "name": "Email"
                        },
                        {
                            "value": "fax",
                            "name": "Fax"
                        }
                    ]
                },
                {
                    "key": "email",
                    "name": "<b>Email</b>",
                    "type": "textbox"
                },
                {
                    "key": "subject",
                    "name": "<b>Subject</b>",
                    "type": "textbox"
                },
                {
                    "key": "body",
                    "name": "<b>Email body</b>",
                    "type": "textarea"
                },
                {
                    "key": "phone",
                    "name": "<b>Phone Number:</b><br>Include country code, formatting not important",
                    "type": "textbox"
                },
                {
                    "key": "regarding",
                    "name": "<b>Regarding</b>",
                    "type": "textbox"
                },
                {
                    "key": "cover",
                    "name": "<b>Cover Letter Text</b>",
                    "type": "textarea"
                },
                {
                    "key": "filable-field",
                    "name": "<b>Field</b>",
                    "type": "sub_settings",
                    "repeatable": true,
                    "sub_settings": [
                        {
                            "key": "pdf-field-name",
                            "name": "<b>PDF Field</b>",
                            "type": "textbox"
                        },
                        {
                            "key": "fill-value",
                            "name": "<b>Value</b>",
                            "type": "field-list"
                        }
                    ]
                }
            ]
        }
    ]
}